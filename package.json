{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev\" \"npm run dev\" --names \"server,client\" --prefix \"{name}\"",
    "build": "npm run build --prefix client",
    "install:all": "npm install --prefix server && npm install --prefix client",
    "start:server": "npm run start --prefix server",
    "start:client": "npm run build --prefix client && npm run preview --prefix client",
    "lint": "npm run lint --prefix client"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}